<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.william.marioenco.IpInvoerScherm"
    android:background="#ffffffff">


    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Verbinden..."
        android:id="@+id/IpKnop"
        android:layout_marginBottom="97dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ff1d72ff" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/ipinvoer"
        android:layout_above="@+id/IpKnop"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp"
        android:autoText="false">

        </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ip:"
        android:id="@+id/textView6"
        android:textSize="12pt"
        android:layout_alignBottom="@+id/ipinvoer"
        android:layout_toStartOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="U dient uzelf eerst te verbinden met de server."
        android:id="@+id/textView7"
        android:layout_marginTop="111dp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Warning:"
        android:id="@+id/textView8"
        android:textSize="12pt"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#ff1d72ff" />


</RelativeLayout>
