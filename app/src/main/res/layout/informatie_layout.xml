<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Informatie"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:textSize="20pt"
        android:textColor="#ffff1b19"
        android:gravity="center_horizontal"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Wij van Mario en Co zijn gespecialiceert in het repareren en aanleggen van uw leidingwerk. Met deze app kunt u gemmakkelijk een aanvraag posten voor het aanleggen of repareren van uw leidingwerk."
        android:selectAllOnFocus="true"
        android:gravity="center_horizontal"
        android:maxWidth="350dp"
        android:textSize="10pt"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="Om een service aan te vragen gaat u naar de pagina &quot;Home&quot;. De pagina is hieronder vermeld."
        android:gravity="center_horizontal"
        android:textSize="10pt"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:textSize="15pt"
        android:textColor="#ffff0e01"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageView2"
        android:src="@drawable/mario"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp" />

</RelativeLayout>