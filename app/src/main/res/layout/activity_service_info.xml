<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.william.marioenco.ServiceInfo"
    android:gravity="center_horizontal"
    android:background="#ffffffff">



    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoServiceNaam"
        android:gravity="center_horizontal"
        android:textSize="14pt"
        android:textColor="#ffff1b19"
        android:layout_below="@+id/imageView2"
        android:layout_toEndOf="@+id/annuleer"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/infoVeld"
        android:gravity="center_horizontal"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/infoServiceNaam"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="bestellen"
        android:id="@+id/accepteer"
        android:layout_row="0"
        android:layout_column="17"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#ffadff94" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Annuleer"
        android:id="@+id/annuleer"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_alignTop="@+id/accepteer"
        android:layout_alignParentStart="true"
        android:background="#ffadff94" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageView2"
        android:src="@drawable/mario"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false" />


</RelativeLayout>